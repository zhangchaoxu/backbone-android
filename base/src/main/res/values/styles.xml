<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- RootView style -->
    <style name="RootView">
        <item name="android:id">@id/root_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="RootView.Full">
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Layout.V">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Layout.H">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.V.WRAPH">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.H.WRAPH">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:minHeight">@dimen/toolbar_height</item>
        <item name="android:layout_marginTop">@dimen/status_bar_height</item>
    </style>

    <style name="Toolbar.LeftIcon">
        <item name="android:id">@id/toolbar_left</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Toolbar.RightIcon">
        <item name="android:id">@id/toolbar_right</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

</resources>