<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              style="@style/RootView">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="80px"
        tl:tl_divider_color="#a2a2a2"
        tl:tl_divider_padding="10dp"
        tl:tl_divider_width="1dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="?attr/colorPrimary"
        tl:tl_indicator_height="4dp"
        tl:tl_textSelectColor="?attr/colorPrimary"
        tl:tl_textUnselectColor="@color/primary_text"
        tl:tl_textsize="16sp"/>

    <com.idogfooding.backbone.widget.ViewPager
        android:id="@id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>