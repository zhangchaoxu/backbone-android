<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- RootView style -->
    <style name="RootView">
        <item name="android:id">@id/root_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="Layout.H">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.WRAPH">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.H.WRAPH">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 默认深色背景,白色图标和字体 -->
    <style name="Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/primary</item>

        <item name="title_rightTextDrawableWidth">@dimen/toolbar_action_width</item>
        <item name="title_leftTextDrawableWidth">@dimen/toolbar_action_width</item>
        <item name="title_rightTextDrawableHeight">@dimen/toolbar_action_height</item>
        <item name="title_leftTextDrawableHeight">@dimen/toolbar_action_height</item>
        <item name="title_statusColor">@color/primary</item>
        <item name="title_statusBarLightMode">false</item>
        <item name="title_leftTextColor">@color/white</item>
        <item name="title_rightTextColor">@color/white</item>
        <item name="title_titleMainTextColor">@color/white</item>
        <item name="title_titleSubTextColor">@color/white</item>
    </style>

    <style name="Toolbar.Light" parent="@style/Toolbar">
        <item name="android:background">@color/white</item>
        <item name="title_statusColor">@color/white</item>
        <item name="title_leftTextColor">@color/black</item>
        <item name="title_rightTextColor">@color/black</item>
        <item name="title_titleMainTextColor">@color/black</item>
        <item name="title_titleSubTextColor">@color/black</item>
        <item name="title_statusBarLightMode">true</item>
    </style>

    <style name="Toolbar.Trans" parent="@style/Toolbar">
        <item name="android:background">@color/transparent</item>
        <item name="title_statusColor">@color/transparent</item>
    </style>

</resources>