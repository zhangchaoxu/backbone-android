<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- RootView style -->
    <style name="RootView">
        <item name="android:id">@id/root_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="Layout.H">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Layout.WRAPH">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Layout.H.WRAPH">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fillStatusBar">true</item>
        <item name="titleBarColor">@color/primary</item>
        <item name="titleBarHeight">@dimen/toolbar_height</item>
        <item name="statusBarColor">@color/primary_dark</item>
        <item name="centerTextColor">@color/white</item>
        <item name="centerSubTextColor">@color/white</item>
        <item name="rightTextColor">@color/white</item>
        <item name="leftTextColor">@color/white</item>
        <item name="centerType">textView</item>
    </style>

</resources>